<% layout('layouts/boilerplate')%>
    <h1 class= "text-center">ALL Students Data</h1>
    <table id="myTable" class="table table-dark table-striped" class="table table-hover">  
        <thead>  
          <tr class="table-light">  
            <th>NO</th>  
            <th>image</th> 
            <th>Name</th> 
            <th>Registraion number</th>  
            <th>Phone Number</th>  
            <th>Address</th>
            <th></th>
            <th></th>
          </tr>  
        </thead>  
        <tbody>  
            <% var i=1; for(let student of studentdatas) { %>
          <tr>  
            <td> <%= i %></td>  
            <td>  <div>
              <img src="data:student/<%=student.img.contentType%>;base64,
                   <%=student.img.data.toString('base64')%>"  width="100" height="100">
              <div></td>  
            <td> <%= student.name %> </td> 
            <td><%= student.studentid %></td>  
            <td><%= student.contact %></td>  
            <td><%= student.address %></td>
            <td><a class="btn btn-primary " href="/Admin/info/<%= student._id %>/edit" role="button">edit</a></td>
            <td> <form action="/Admin/info/<%= student._id %>?_method=DELETE" method="POST" >
                <button type="submit" class="btn btn-danger ">Delete</button>
              </form></td>
          </tr>  
          <% i++ %>
          <% }%>

        </tbody>  
      </table>  
    
   
    <script>
        $(document).ready(function(){
            $('#myTable').dataTable();
        });
      </script>

